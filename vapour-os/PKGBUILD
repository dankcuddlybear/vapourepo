pkgname=vapour-os
pkgver=1.1.35
pkgrel=5
pkgdesc='Arch-based distro that aims to be fast, flexible and power-efficient (core package). Make sure you install a kernel and headers.'
arch=(x86_64)
url='https://github.com/dankcuddlybear/vapourepo'
install=vapour-os.install
backup=('etc/skel/.config/yay/config.json'
)
depends=('base' 'base-devel' 'bash-completion' 'bluez'
	'chaotic-keyring' 'chaotic-mirrorlist'
	'dnsmasq' 'dosfstools'
	'efibootmgr' 'ethtool' 'exfatprogs'
	'hdparm' 'fscrypt'
	'iw'
	'linux-firmware'
	'man-db' 'man-pages' 'modemmanager' 'mtools'
	'sbctl' 'sudo'
	'terminus-font'
	'wireless-regdb' 'words'
	'yay'
)
package() {
	cp -r "$srcdir/../files/etc" "$pkgdir"
	cp -r "$srcdir/../files/usr" "$pkgdir"
}
