depends=(
    'lib32-mesa'
    'libva-intel-driver' 'lib32-libva-intel-driver'
    'pocl'
    'vulkan-intel' 'lib32-vulkan-intel'
)
package() {
	cp -r "$srcdir/../files/usr" "$pkgdir"
	"$srcdir/../../set-default-permissions.sh" "$pkgdir"
}
