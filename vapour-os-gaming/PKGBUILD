			'lib32-libappindicator-gtk2' 'lib32-libappindicator-gtk3'
			'lib32-libnm'
		'lib32-openal' 'lib32-openssl-1.1'
		'lib32-pipewire-jack' 'lib32-pipewire-v4l2'
		'lib32-sdl2_image' 'lib32-sdl2_mixer'
		'lib32-libudev0-shim' 'lib32-libusb'
		'lib32-vulkan-mesa-layers'
		'lib32-libwrap'
		'lib32-libxslt'
	## lib*
		'libcurl-compat' 'lib32-libcurl-compat' 'libcurl-gnutls' 'lib32-libcurl-gnutls'
		'libgcrypt15' 'lib32-libgcrypt15'
		'libidn11' 'lib32-libidn11'
		'libjpeg6-turbo' 'lib32-libjpeg6-turbo'
