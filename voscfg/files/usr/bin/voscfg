#!/bin/sh
DISTRO_NAME="$(cat /usr/lib/os-release | grep -i "PRETTY_NAME" | cut -d '=' -f 2 | sed 's/"//g')"
SCRIPT_DIR="$(readlink -f $( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd ))"
while true; do
	CHOICE=$(dialog --stdout --backtitle "$DISTRO_NAME settings" --title "Users" --menu "Main menu" 0 0 0 "a" "Appearance" "r" "Regional settings" "t" "Time and date" "u" "Users" "n" "Network settings" "p" "Power management" "s" "System information" "e" "Extra software")
	if [ -z "$CHOICE" ]; then exit 125; else
		case $CHOICE in
			u) "$SCRIPT_DIR/../lib/$(basename $0)/users";;
			*) echo "[ERROR] Not yet implemented"; exit 1;;
		esac
	fi
done
