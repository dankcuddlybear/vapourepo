# Maintainer: Dankcuddlybear <dankcuddlybear@protonmail.com>
pkgname=voscfg
pkgver=1.0.0
pkgrel=8
pkgdesc='Curses based application for system/user management and configuration'
arch=(any)
url='https://github.com/dankcuddlybear/vapourepo'
depends=('dialog'
	'ethtool'
	'fscrypt'
	'hdparm'
	'iw'
	'networkmanager'
	'terminus-font'
	'wireless-regdb'
)
package() {
	cp -r "$srcdir/../files/usr" "$pkgdir"
	"$srcdir/../../set-default-permissions.sh" "$pkgdir"
	chmod +x "$pkgdir/usr/bin/$pkgname"
	CDIR="$(pwd)"; cd "$pkgdir/usr/lib/$pkgname"; chmod +x *; cd "$CDIR"
	chmod 6755 "$pkgdir/usr/lib/$pkgname/createhomedir" "$pkgdir/usr/lib/$pkgname/deletehomedir"
}
